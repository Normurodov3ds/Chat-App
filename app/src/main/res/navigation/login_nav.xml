<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/loading">

    <fragment
        android:id="@+id/loading"
        android:name="com.example.chatapp.view.loading.Loading"
        android:label="Loading"
        tools:layout="@layout/loading_screen" >
        <action
            android:id="@+id/action_loading_to_signUp"
            app:destination="@id/signUp" />
        <action
            android:id="@+id/action_loading_to_signIn"
            app:destination="@id/signIn" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.example.chatapp.view.signIn.SignUp"
        android:label="SignUp"
        tools:layout="@layout/sign_up" >
        <action
            android:id="@+id/action_signUp_to_signIn"
            app:destination="@id/signIn" />
    </fragment>
    <fragment
        android:id="@+id/signIn"
        android:name="com.example.chatapp.view.signUp.SignIn"
        android:label="SignIn"
        tools:layout="@layout/sign_in" >
        <action
            android:id="@+id/action_signIn_to_signUp"
            app:destination="@id/signUp" />
    </fragment>
</navigation>